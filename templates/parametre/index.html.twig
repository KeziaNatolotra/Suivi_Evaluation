{% extends 'base.html.twig' %}

{% block title %}Hello ParametreController!{% endblock %}

{% block body %}   
    <div class="d-flex justify-content-end mt-2">
        <a href={{ path('app_contenue')}} class="btn btn-primary">
         <i class="fas fa-arrow-left"></i> RETOUR
        </a>
    </div>
    <div class="form-container">
        <h3 style="margin-bottom: 20px; color: var(--primary);">Paramètres du Compte</h3>
                    
        <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 20px;">
            <div class="form-group">
                <label>Nom</label>
                <input type="text" class="form-control">
            </div>
                        
            <div class="form-group">
                <label>Prénom</label>
                <input type="text" class="form-control">
            </div>
        </div>
                    
        <div class="form-group">
            <label>Email</label>
            <input type="email" class="form-control">
        </div>
                    
        <div class="form-group">
            <label>Fonction</label>
            <input type="text" class="form-control">
        </div>
                        
        <button class="btn btn-primary">Enregistrer les Modifications</button>
                
        <div class="form-container">
        <h3 style="margin-bottom: 20px; color: var(--primary);">Changer le Mot de Passe</h3>
                    
        <div class="form-group">
        <label>Mot de Passe Actuel</label>
        <input type="password" class="form-control">
        </div>
                    
        <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 20px;">
        <div class="form-group">
            <label>Nouveau Mot de Passe</label>
            <input type="password" class="form-control">
        </div>
                        
        <div class="form-group">
            <label>Confirmer le Mot de Passe</label>
            <input type="password" class="form-control">
        </div>
    </div>
                    
    <button class="btn btn-primary">Mettre à jour le Mot de Passe</button>
                
    <div class="form-container">
        <h3 style="margin-bottom: 20px; color: var(--primary);">Préférences Système</h3>
            
        <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 20px;">
            <div class="form-group">
                <label>Langue</label>
                <select class="form-control">
                    <option>Français</option>
                    <option>Anglais</option>
                    <option>Espagnol</option>
                </select>
            </div>
                        
        <div class="form-group">
            <label>Fuseau Horaire</label>
            <select class="form-control">
                <option>UTC+1 (Europe/Paris)</option>
                <option>UTC+0 (Europe/London)</option>
                <option>UTC-5 (America/New_York)</option>
            </select>
        </div>
    </div>
                    
    <div class="form-group">
        <label>Fréquence des Notifications</label>
        <select class="form-control">
            <option>En temps réel</option>
            <option>Quotidiennement</option>
            <option>Hebdomadairement</option>
        </select>
    </div>
                    
    <div class="form-group">
        <label>
            <input type="checkbox" checked> Recevoir les rapports par email
        </label>
    </div>
                    
    <div class="form-group">
        <label>
            <input type="checkbox" checked> Alertes pour les projets à risque
        </label>
    </div>
                    
    <button class="btn btn-primary">Enregistrer les Préférences</button>
{% endblock %}
