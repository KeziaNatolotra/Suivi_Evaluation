{% extends 'base.html.twig' %}

{% block body %}
    <header>
        <div class="header-container">
            <a href="#" class="logo">
                <i class="fas fa-landmark logo-icon"></i>
                <div class="logo-text">
                    <h1 class="logo-title">SUIVI DE VOTRE PROJET</h1>
                    <p class="logo-subtitle">Suivez et évaluez votre projet en toute sécuriter</p>
                </div>
            </a>
            
            <div class="user-info">
                <div class="notifications">
                    <i class="fas fa-bell"></i>
                    <span class="notification-badge">3</span>
                    <div class="notification-dropdown">
                        <div class="notification-header">
                            <h3 class="notification-title">Notifications</h3>
                            <button class="notification-clear">Tout marquer comme lu</button>
                        </div>
                        <div class="notification-list">
                            <div class="notification-item unread">
                                <div class="notification-icon">
                                    <i class="fas fa-check-circle text-success"></i>
                                </div>
                                <div class="notification-content">
                                    <p class="notification-message">Votre projet "Numérisation des archives" a été approuvé</p>
                                    <small class="notification-time">Il y a 2 heures</small>
                                </div>
                            </div>
                            <div class="notification-item unread">
                                <div class="notification-icon">
                                    <i class="fas fa-exclamation-triangle text-warning"></i>
                                </div>
                                <div class="notification-content">
                                    <p class="notification-message">Rapport trimestriel en attente de validation</p>
                                    <small class="notification-time">Hier</small>
                                </div>
                            </div>
                            <div class="notification-item">
                                <div class="notification-icon">
                                    <i class="fas fa-info-circle text-info"></i>
                                </div>
                                <div class="notification-content">
                                    <p class="notification-message">Nouvelle version de la plateforme disponible</p>
                                    <small class="notification-time">Il y a 3 jours</small>
                                </div>
                            </div>
                        </div>
                        <div class="notification-footer">
                            <a href="#" class="notification-view-all">Voir toutes les notifications</a>
                        </div>
                    </div>
                </div>
                <div class="user-profile">
                    <div class="user-avatar">S&E</div>
                    <div class="user-details">
                        <div class="user-name">Suivi&Evaluation</div>
                        <div class="user-role">Administrateur</div>
                    </div>
                    <div class="user-dropdown">
                        <div class="user-dropdown-header">
                            <div class="user-dropdown-avatar">S&E</div>
                            <div class="user-dropdown-details">
                                <h4 class="user-dropdown-name">Suivi&Evaluation</h4>
                                <p class="user-dropdown-email">Administrateur</p>
                            </div>
                        </div>
                        <ul class="user-dropdown-menu">
                            <li><a href="#" class="user-dropdown-item"><i class="fas fa-user"></i> Mon profil</a></li>
                            <li><a href="{{path('app_parametre')}}" class="user-dropdown-item"><i class="fas fa-cog"></i> Paramètres</a></li>
                            <div class="user-dropdown-divider"></div>
                            <li><a href="{{path('app_accueil')}}" class="user-dropdown-item"><i class="fas fa-sign-out-alt"></i> Déconnexion</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </header>
{% endblock %}